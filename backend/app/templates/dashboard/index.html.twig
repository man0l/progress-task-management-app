{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<div class="flex justify-between gap-4 p-4">
    <div class="flex gap-4">
        <div class="p-4 rounded-lg bg-red-500 text-white">
            <h2 class="text-xl font-bold mb-2">Completed Tasks</h2>
            <div class="text-3xl font-bold">{{ completedTasks }}</div>
        </div>
        
        <div class="p-4 rounded-lg bg-blue-500 text-white">
            <h2 class="text-xl font-bold mb-2">Pending Tasks</h2>
            <div class="text-3xl font-bold">{{ pendingTasks }}</div>
        </div>
    </div>
</div>
{% endblock %}
